<h2>Criar Conta Bancária</h2>

<form action="/contas/create" method="POST">
    <label>Banco:</label>
    <input type="text" name="banco" required><br>

    <label>Agência:</label>
    <input type="text" name="agencia" required><br>

    <label>Conta:</label>
    <input type="text" name="numero_conta" required><br>

    <label>Saldo:</label>
    <input type="number" step="0.01" name="saldo" required><br>

    <button type="submit">Salvar</button>
</form>
